<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="email_template_student_record" model="mail.template">
            <field name="name">Student Record Notification</field>
            <field name="model_id" ref="moodle_odoo_int.model_op_student"/>
            <field name="email_from" >${'no-reply@ciexpro.com'}</field>
            <field name="email_to" >${object.email|safe}</field>
            <field name="lang">${object.company_id.lang}</field>
            <!--field name="report_template" ref="int_hr_recibo_nomina.action_hr_report_recibo_nomina"/-->
            <field name="subject">${'Bienvenido a la gran experiencia CIEXPRO '}</field>
            <field name="auto_delete" eval="True"/>
            <field name="body_html">
                <![CDATA[
                    <div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">
                        <p>Estimado(a),<br/>
                        <B>${object.first_name}  ${object.last_name}.</B>
                        <br/><br/>
                        <h3>Pago por verificar</h3>
                        <br/><br/>
                        El pago realizado para participar en el Bootcamp ${object.full_course_name} ha sido registrado satisfactoriamente y se encuentra a la espera de confirmar la recepción.
                        <br/>
                        Pronto será notificado(a) sobre el estado de su pago a través del correo electrónico suministrado en su registro.
                        <br/>
                        <br/><br/>
                        Le agradecemos por seleccionar nuestros productos.
                        <br/><br/>
                        Ante cualquier error comuníquese con <b>info@ciexpro.com</b>
                        <br/><br/>
                        Feliz día.-</p>
                    </div>
                ]]>
            </field>
        </record>

    </data>
</odoo>